{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "Build",
			"type": "shell",
			"command": "~/projects/sos/build.sh asm",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"taskName": "Run",
			"type": "shell",
			"command": "qemu-system-i386 -s --cdrom ~/projects/sos/bin/simpleos.iso",
			"problemMatcher": []
		}
	]
}